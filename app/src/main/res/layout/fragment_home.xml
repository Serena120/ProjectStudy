<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Dawn"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Welcome to Project Study!"
        android:textStyle="bold"
        android:textColor="@color/royal"
        android:textSize="30sp"
        android:paddingStart="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:fontFamily = "@font/playfair_display"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to do today?"
        android:textStyle="bold"
        android:textColor="@color/midnight"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:paddingStart="30dp"
        android:fontFamily="serif"
        />

    <ScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home"
        android:padding="20dp"
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_below="@+id/top_view">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:backgroundTint="@color/porcelain"
                android:layout_width="310dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_class_24"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/assignmentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track Assignments"
                        android:layout_gravity="center_horizontal"
                        android:padding="14dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/quattrocento_sans_regular"
                        android:textStyle="bold"
                        android:textColor="@color/midnight"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/porcelain"
                android:layout_width="310dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_margin="2dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_access_time_24"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/pomodoroTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/quattrocento_sans_regular"
                        android:text="Pomodoro"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/midnight"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/porcelain"
                android:layout_width="310dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="3dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_check_24"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/todoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To do List"
                        android:layout_gravity="center_horizontal"
                        android:padding="14dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/quattrocento_sans_regular"
                        android:textStyle="bold"
                        android:textColor="@color/midnight"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/calendarCard"
                android:backgroundTint="@color/porcelain"
                android:layout_width="310dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_calendar_month_24"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="calendar" />

                    <TextView
                        android:id="@+id/calendarTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Calendar"
                        android:padding="14dp"
                        android:textColor="@color/midnight"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quattrocento_sans_regular"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/porcelain"
                android:layout_width="310dp"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_margin="2dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/baseline_note_24"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="notes" />
                    <TextView
                        android:id="@+id/notesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:fontFamily="@font/quattrocento_sans_regular"
                        android:textStyle="bold"
                        android:textColor="@color/midnight"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="13dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
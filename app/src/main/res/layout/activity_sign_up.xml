<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dawn"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/porcelain"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/signupHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_display"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/midnight"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext1"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:inputType="textEmailAddress"
                android:padding= "10dp"
                android:hint="email"
                android:fontFamily="@font/quattrocento_sans_regular"
                android:drawableLeft="@drawable/baseline_email_24"
                android:textColor="@color/midnight"
                android:drawablePadding="12dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext1"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="password"
                android:fontFamily="@font/quattrocento_sans_regular"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/midnight"
                android:drawablePadding="12dp" />

            <EditText
                android:id="@+id/confirmPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext1"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="confirm password"
                android:fontFamily="@font/quattrocento_sans_regular"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/midnight"
                android:drawablePadding="12dp" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="left"
                android:layout_marginHorizontal="20dp"
                android:text="Sign Up"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/midnight"
                android:fontFamily="@font/quattrocento_sans_regular"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="left"
                android:text="already have an account?"
                android:fontFamily="@font/quattrocento_sans_regular"
                android:textSize="15sp"
                android:textColor="@color/midnight"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>